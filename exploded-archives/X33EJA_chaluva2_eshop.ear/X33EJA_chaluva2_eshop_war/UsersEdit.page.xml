<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/UsersList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{usersHome.wire}"/>

   <param name="usersFrom"/>
   <param name="usersId" value="#{usersHome.usersId}"/>
   <param name="administratorsFrom"/>
   <param name="administratorsId" value="#{administratorsHome.administratorsId}"/>

   <param name="registeredUserFrom"/>
   <param name="registeredUserId" value="#{registeredUserHome.registeredUserId}"/>
   <param name="addressesFrom"/>
   <param name="addressesId" value="#{addressesHome.addressesId}"/>




   <navigation from-action="#{usersHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Users.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{usersHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Users.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{usersHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/UsersList.xhtml"/>
      </rule>
   </navigation>

</page>
