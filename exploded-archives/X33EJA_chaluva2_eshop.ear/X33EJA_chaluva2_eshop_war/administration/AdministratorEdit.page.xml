<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/AdministratorsList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <param name="administratorFrom"/>
   <param name="administratorId" value="#{administratorManager.administratorId}"/>
   
   <navigation from-action="#{administratorManager.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/administration/Administrator.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{administratorManager.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/administration/Administrator.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{administratorManager.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/administration/AdministratorList.xhtml"/>
      </rule>
   </navigation>

</page>
